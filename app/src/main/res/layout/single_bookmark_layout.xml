<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_bookmark_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/relative_layout_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/image_view_bookmark_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_bookmark_title"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="the story titile wiil go here"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <ImageButton
                    android:id="@+id/image_button_story_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_view_bookmark_title"
                    android:layout_marginTop="15dp"
                    android:background="@color/tw__transparent"
                    android:src="@drawable/story_bookmark" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/image_view_bookmark_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/relative_layout_bookmark"
                android:src="@color/bright_blue" />

        </RelativeLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />


</LinearLayout>