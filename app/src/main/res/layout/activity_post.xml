<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ganesh.story.ui.post.PostActivity">

    <ImageButton
        android:id="@+id/close_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/tw__transparent"
        android:onClick="closePost"
        android:src="@drawable/close" />


    <ImageView
        android:id="@+id/image_view_choose_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/close_post"
        android:onClick="image_view_open_photos" />

    <EditText
        android:id="@+id/edit_text_title_for_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:hint="add title of story"
        android:textColor="@color/blue"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_share_my_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:text="Share"
        android:textColor="@color/blue"
        android:textSize="20sp" />

</RelativeLayout>
