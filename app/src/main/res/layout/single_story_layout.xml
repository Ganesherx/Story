<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">


        <TextView
            android:id="@+id/text_view_story_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="username"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/image_view_story_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/image_button_story_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/tw__transparent"
                android:src="@drawable/story_like_icon" />

            <ImageButton
                android:id="@+id/image_button_story_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_button_story_like"
                android:backgroundTint="@color/tw__transparent"
                android:src="@drawable/comment_icon" />

            <!--   <TextView
                   android:id="@+id/text_view_likes_count"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="12dp"
                   android:layout_toRightOf="@+id/image_button_story_like"
                   android:text=""
                   android:textColor="@color/black" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="4dp"
                   android:layout_marginTop="12dp"
                   android:layout_toRightOf="@+id/text_view_likes_count"
                   android:text=" likes"
                   android:textColor="@color/black" />                           -->

            <ImageButton
                android:id="@+id/image_button_story_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/tw__transparent"
                android:src="@drawable/story_bookmark" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_story_username_for_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_story_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/text_view_story_username_for_title"
                android:text="title of the story will go here"
                android:textColor="@color/black" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>