<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/_single_text_view_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:text="username"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/single_text_view_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/_single_text_view_comment_username"
            android:text="the title of the story will go here"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/image_button_delete_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/tw__transparent"
            android:clickable="true"
            android:focusable="false"
            android:src="@drawable/close" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="4dp"
        android:background="@color/black" />

</LinearLayout>